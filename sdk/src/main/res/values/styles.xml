<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Base.AppCompat.Light">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@android:color/holo_blue_dark</item>
        <item name="android:titleTextStyle">@style/actionBarTextStyle</item>
    </style>

    <style name="actionBarTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="TextViewStyleSmall">
        <item name="android:textSize">13dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="CircleIconStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="border_color">@android:color/black</item>
        <item name="android:layout_margin">5dp</item>
        <item name="border_width">1dp</item>
    </style>

</resources>
