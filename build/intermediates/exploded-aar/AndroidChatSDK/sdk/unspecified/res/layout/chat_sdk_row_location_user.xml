<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/RowStyle"
    android:gravity="right">

    <de.hdodenhof.circleimageview.CircleImageView
        style="@style/CircleIconStyle"
        android:id="@+id/img_user_image"
        android:layout_centerVertical="true"
        android:src="@drawable/icn_user_x_2"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/linear"
        android:id="@+id/chat_sdk_image"/>
    <!-- DO not change this ImageView id the id is used in all message layouts!-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@id/linear"
        android:layout_toLeftOf="@id/img_user_image"
        android:orientation="vertical">

        <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Time"
        style="@style/TextViewStyleSmall"
        android:id="@+id/txt_time"
        android:padding="5dp"
            android:layout_weight="1"
        android:gravity="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="View"
            android:layout_weight="1"
            android:id="@+id/chat_sdk_btn_show_location"/>

    </LinearLayout>

</RelativeLayout><!-- From: file:/home/braunster/Android/Projects/AndroidChatSDK/AndroidChatSDK/sdk/src/main/res/layout/chat_sdk_row_location_user.xml -->